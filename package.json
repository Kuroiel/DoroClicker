{
  "type": "module",
"scripts": {
  "test": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.mjs",
  "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.mjs --testPathIgnorePatterns=e2e",
  "test:e2e": "jest -c e2e-jest.config.mjs"
},
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "selenium-webdriver": "^4.21.0",
    "chromedriver": "^123.0.0",
    "http-server": "^14.1.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/e2e/"
    ]
  }
}
